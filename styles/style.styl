:root {
	--vision-orange: #FE9430;
	--vision-yellow: #fbb800;
	--p: 29 99% 59%;
	--pf: 29 95.9% 52%;
	--pc: 0 0% 100%;
	--s: 44 100% 49%;
	--sf: 43 100% 46.1%;
	--sc: 0 0% 100%;
}

// Font
@font-face {
	font-family: 'Gordita';
	src: url('./font/Gordita-Regular.otf') format('truetype');
	font-display: swap;
	font-weight: 400;
	font-style: normal;
}

@font-face {
	font-family: 'Gordita';
	src: url('./font/Gordita-Medium.otf') format('truetype');
	font-display: swap;
	font-weight: 500;
	font-style: normal;
}

@font-face {
	font-family: 'Gordita';
	src: url('./font/Gordita-Bold.otf') format('truetype');
	font-display: swap;
	font-weight: 700;
	font-style: normal;
}

@font-face {
	font-family: 'Gordita';
	src: url('./font/Gordita-Black.otf') format('truetype');
	font-display: swap;
	font-weight: 800;
	font-style: normal;
}

html {
	overflow-x: hidden;
}

::selection {
	background-color: var(--vision-orange);
	color: white;
}

body {
	background-color: #F6F6F6;
	font-family: 'Gordita', sans-serif;
}

.decoration {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1;
}

.decoration::before {
	content: '';
	background-image: url('assets/full-orange.svg');
	background-position: center;
	background-size: contain;
	background-repeat: no-repeat;
	display: block;
	width: 50rem;
	height: 50rem;
	position: absolute;
	top: 40rem;
	right: 0;
	transform: translateX(50%);
	z-index: -1;
}

.decoration::after {
	content: '';
	background-image: url('assets/half-yellow.svg');
	background-position: center;
	background-size: contain;
	background-repeat: no-repeat;
	display: block;
	width: 35rem;
	height: 35rem;
	position: absolute;
	top: 15rem;
	left: 0;
	transform: translateX(-50%);
	z-index: -1;
}

h1, h2, h3 {
	font-weight: bold;
	margin-top: 1rem;
}

main {
	margin: 0 auto;
	margin-bottom: 6rem;
	width: 85vw;
	z-index: 2;
	position: relative;

	@media (max-width: 600px) {
		width: 95vw;
	}
}

// Header
.navbar {
	padding: 0 2rem;
	padding-top: 3rem;
}

.logo {
	height: 3.5rem;
}

.vision-menu {
	& a {
		text-transform: capitalize;
		font-weight: bold;
		font-size: 1rem;
	}
}

// Presentation page
.hero {
	min-height: 80vh;

	&-content {
		max-width: unset;
	}

	&-text {
		width: 50%;
		padding-right: 4rem;

		&-title {
			font-size: 4rem;
			font-weight: 900;
			max-width: 30rem;
		}

		&-description {
			font-size: 1.1rem;
			line-height: 1.5rem;
		}
	}

	&-image {
		width: 50%;
		max-width: unset;

		&-media {
			max-height: 25rem;
			object-fit: contain;
			border-radius: 0.7rem;
			box-shadow: 2px 2px 10px rgba(100, 100, 100, 0.061);
		}
	}
}

.hero b {
	font-weight: normal;
	font-size: 1.2rem;
}

em {
	color: var(--vision-orange);
	font-style: normal;
}

.presentation-container {
	display: flex;
	justify-content: space-around;
	align-items: center;
	margin-bottom: 8rem;

	& img {
		width: 50%;
	}
}

.journey-container {
	display: flex;
	align-items: center;
	justify-content: center;
}

.center {
	margin-top: 0 auto;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
}

.journey-text {
	font-size: 2.3rem;
	font-weight: 700;
	width: 30rem;
	line-height: 3rem;
}

.features-container {
	display: grid;
	gap: 6rem;
	grid-template-columns: repeat(auto-fit, minmax(11rem, 1fr));
	margin-bottom: 8rem;

	& .card {
		flex: 1;
		--padding-card: 1rem 1rem 1.5rem 1rem;
		padding: 2rem 2rem;

		&-body {
			text-align: start;
			padding-left: 0;
			padding-right: 0;
		}

		&-title {
			margin: 0;
			margin-bottom: 0.2rem;
			font-weight: bold;
		}

		& figure {
			height: 12rem;
			width: unset;
			border-radius: 0.5rem;
			display: flex;
			align-items: center;
			justify-content: center;

			& img {
				height: 75%;
				width: auto;
			}
		}

		&:nth-of-type(even) figure {
			background-color: var(--vision-orange);
		}

		&:nth-of-type(odd) figure {
			background-color: var(--vision-yellow);
		}
	}
}

.asset {
	flex: 1;
}

.callout-text {
	font-size: 3.5rem;
	font-weight: bold;
	width: 30rem;
	line-height: 3.5rem;
}

.callout {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 4rem 0;

	& .card {
		width: 100%;
		padding: 2rem;
		background-color: var(--vision-orange);

		&-body {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			margin: 0 1rem;

			p {
				width: 20rem;
				font-size: 2.5rem;
				font-weight: bold;
			}
		}

		&-actions {
			margin: 0;

			button {
				background-color: white;
				color: var(--vision-orange);
				border: none;
				font-weight: bold;
				font-size: 1.2rem;
			}
		}
	}
}

// Pages Textes
.title-container {
	text-align: center;
	margin-bottom: 6rem;
	margin-top: 7rem;
}

.title-container h1 {
	font-size: 2rem;
	font-weight: 900;
}

.title-container b {
	font-size: 0.9rem;
	display: block;
	font-weight: normal;
	margin-bottom: -1rem;
}

.title-container p {
	padding: 0 8rem;
	opacity: 0.7;
}

.text-container {
	opacity: 0.8;
}

.text-container h2 {
	font-size: 1.2rem;
	margin-bottom: 0.5rem;
}

// Footer
.footer-title {
	text-transform: uppercase;
	color: #95999d;
	opacity: 1;
}

// copy
#copy {
	outline: none;
	width: 1rem;
	height: 1rem;
}

#copy:hover {
	background-color: #FFF;
}

#copy:hover svg {
	stroke: #0e0e0e;
}

.mockup-code {
	padding-top: 1rem;
	padding-bottom: 1rem;
	background-color: black;
	border-radius: 1rem;
}

.mockup-code pre {
	height: 1.5rem;
	display: flex;
	justify-content: flex-start;
	padding: 0 2rem;
	margin-right: 1rem;
	font-size: 0.8rem;
}

.mockup-code pre::before, .mockup-code::before {
	content: none;
}

.copy-mail {
	position: relative;
	margin-top: 2rem;
}

.copy {
	position: absolute;
	top: 50%;
	right: 0.7rem;
	transform: translateY(-50%);
}

#copy {
	border-radius: 0.2rem;
}

#copy:focus {
	outline: 1px solid #FFF;
}