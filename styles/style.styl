#app {
  font-family: Avenir, Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.footer-title
    text-transform uppercase
    color: #95999d
    opacity: 1
html
	overflow-x: hidden

body
    background-color: hsla(210, 20%, 98%, 1);

.decoration
	position: absolute
	top: 0
	left: 0
	right: 0
	z-index: 1
.decoration::before
	content: ''
	background-image: url('assets/donut-yellow.svg')
	background-position: center
	background-size: contain
	background-repeat: no-repeat
	display: block
	width: 30rem
	height: 30rem
	position: absolute
	top: 30rem
	right: 0
	transform: translateX(50%)
	z-index: -1
.decoration::after
	content: ''
	background-image: url('assets/semi-circle-orange.svg')
	background-position: center
	background-size: contain
	background-repeat: no-repeat
	display: block
	width: 30rem
	height: 30rem
	position: absolute
	top: 10rem
	left: 0
	transform: translateX(-50%)
	z-index: -1

h1, h2, h3
	font-weight bold
	margin-top 1rem

main
	margin: 0 auto
	margin-bottom: 6rem
	width: 90vw
	z-index: 2
	position: relative
	@media (min-width: 600px) {
		width: 75vw
	}

// Pages Textes
.title-container
    text-align: center
    margin-bottom: 6rem
    margin-top: 7rem

.title-container h1
	font-size 2rem
	font-weight 900
.title-container b
	font-size .9rem
	display block
	font-weight normal
	margin-bottom -1rem
.title-container p
	padding: 0 8rem
	opacity 0.7
.text-container
	opacity 0.8
.text-container h2
	font-size 1.2rem
	margin-bottom 0.5rem
