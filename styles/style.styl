:root {
	--vision-orange: #FE9430;
	--vision-yellow: #fbb800;
}

html {
	overflow-x: hidden;
}

::selection {
	background-color: var(--vision-orange);
	color: white;
}

body {
	background-color: #F6F6F6;
}

.decoration {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1;
}

.decoration::before {
	content: '';
	background-image: url('assets/donut-yellow.svg');
	background-position: center;
	background-size: contain;
	background-repeat: no-repeat;
	display: block;
	width: 30rem;
	height: 30rem;
	position: absolute;
	top: 30rem;
	right: 0;
	transform: translateX(50%);
	z-index: -1;
}

.decoration::after {
	content: '';
	background-image: url('assets/semi-circle-orange.svg');
	background-position: center;
	background-size: contain;
	background-repeat: no-repeat;
	display: block;
	width: 30rem;
	height: 30rem;
	position: absolute;
	top: 15rem;
	left: 0;
	transform: translateX(-50%);
	z-index: -1;
}

h1, h2, h3 {
	font-weight: bold;
	margin-top: 1rem;
}

main {
	margin: 0 auto;
	margin-bottom: 6rem;
	width: 90vw;
	z-index: 2;
	position: relative;

	@media (min-width: 600px) {
		width: 75vw;
	}
}

// Pages Textes
.title-container {
	text-align: center;
	margin-bottom: 6rem;
	margin-top: 7rem;
}

.title-container h1 {
	font-size: 2rem;
	font-weight: 900;
}

.title-container b {
	font-size: 0.9rem;
	display: block;
	font-weight: normal;
	margin-bottom: -1rem;
}

.title-container p {
	padding: 0 8rem;
	opacity: 0.7;
}

.text-container {
	opacity: 0.8;
}

.text-container h2 {
	font-size: 1.2rem;
	margin-bottom: 0.5rem;
}

// Hero on presentation
.hero b {
	font-weight: normal;
}

.hero h1 {
	font-weight: 900;
	max-width: 30rem;
}

.hero p {
	font-size: 0.8rem;
}

em {
	color: var(--vision-orange);
	font-style: normal;
}

.presentation-container {
	display: flex;
}

.asset {
	flex: 1;
}

.callout-text {
	font-size: 3rem;
	font-weight: bold;
	width: 30rem;
	line-height: 3.5rem;
}

// Footer
.footer-title {
	text-transform: uppercase;
	color: #95999d;
	opacity: 1;
}
